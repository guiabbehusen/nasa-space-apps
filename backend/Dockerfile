# ============================================================
# üêç Etapa 1: Imagem base leve com Python
# ============================================================
FROM python:3.11-slim

# Criar diret√≥rio da aplica√ß√£o
WORKDIR /app

# ============================================================
# üì¶ Etapa 2: Instalar depend√™ncias
# ============================================================
COPY requirements.txt .

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential && \
    pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    apt-get remove -y build-essential && \
    apt-get autoremove -y && \
    rm -rf /var/lib/apt/lists/*

# ============================================================
# üìÇ Etapa 3: Copiar o c√≥digo do backend (com estrutura modular)
# ============================================================
COPY . .

# ============================================================
# ‚öôÔ∏è Etapa 4: Vari√°veis de ambiente
# ============================================================
# Impede cria√ß√£o de bytecode .pyc e ativa flush de logs imediatos
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Porta padr√£o do FastAPI/Uvicorn
ENV PORT=8000

# ============================================================
# üöÄ Etapa 5: Comando de inicializa√ß√£o
# ============================================================
# Usa Uvicorn para rodar FastAPI (mais robusto em containers)
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
